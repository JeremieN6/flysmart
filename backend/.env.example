# Server configuration
PORT=5000
NODE_ENV=development

# CORS
CLIENT_ORIGINS=http://localhost:5173

# Amadeus API credentials
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET_KEY=your_amadeus_api_secret

# FlightSky (RapidAPI) configuration
FLIGHTSKY_API_KEY=your_flightsky_rapidapi_key
FLIGHTSKY_API_HOST=flights-sky.p.rapidapi.com
# Optional overrides (defaults: US / en-US / USD)
# FLIGHTSKY_MARKET=US
# FLIGHTSKY_LOCALE=en-US
# FLIGHTSKY_CURRENCY=USD

# FlightAPI configuration
FLIGHT_API_BASE_URL=https://api.flightapi.io
FLIGHT_API_KEY=your_api_key_here
FLIGHT_API_CURRENCY=EUR
FLIGHT_API_CABIN_CLASS=Economy
FLIGHT_API_CHILDREN=0
FLIGHT_API_INFANTS=0
